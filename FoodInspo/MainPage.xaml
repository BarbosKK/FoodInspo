<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodInspo.MainPage"
             BackgroundColor="#B3CF99">

    <Grid>
        <Image
            Source="logo.png"
            Aspect="AspectFill"
            HorizontalOptions="Center"
            VerticalOptions="FillAndExpand"
            Margin="-110,0,0,0"/>

        <Button
            x:Name="CounterBtn"
            Text="Alusta" 
            BackgroundColor="#75975e"
            TextColor="White"
            FontSize="24"
            WidthRequest="300"
            HeightRequest="60"
            Margin="0,0,0,30"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Clicked="OnCounterClicked"
            CornerRadius="30">
        </Button>
    </Grid>

</ContentPage>
