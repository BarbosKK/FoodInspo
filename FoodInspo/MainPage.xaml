<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodInspo.MainPage">

    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="#B3CF99" Offset="0.0" />
            <GradientStop Color="#A8D9A4" Offset="0.3" />
            <GradientStop Color="#75975e" Offset="0.5" />
            <GradientStop Color="#537A4D" Offset="0.7" />
            <GradientStop Color="#3C582F" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Image
            x:Name="LogoImage"
            Source="logo.png"
            Aspect="AspectFill"
            HorizontalOptions="Center"
            VerticalOptions="FillAndExpand"
            Margin="-110,0,0,0"
            Opacity="0" />

        <Button
            x:Name="CounterBtn"
            Text="Alusta" 
            BackgroundColor="#75975e"
            TextColor="White"
            FontSize="24"
            WidthRequest="300"
            HeightRequest="60"
            Margin="0,0,0,30"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Clicked="OnCounterClicked"
            CornerRadius="30"
            Opacity="0" />
    </Grid>
</ContentPage>
